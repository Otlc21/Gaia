@using Microsoft.Extensions.Localization;
@using Dominio.Resource;
@inject IStringLocalizer<SharedResources> Localizer

@{
	ViewData["Title"] = "Login";
	Layout = "_LayoutLogin";
}


<div class="login-container">

	@* <a href="#" class="back-arrow">
		<i class="fa fa-arrow-left"></i>
	</a> *@

	<h1>@Localizer["Hello"]</h1>

	<a asp-controller="Language" asp-action="SetLanguage" asp-route-culture="en-US" asp-route-returnUrl="@Context.Request.Path">
		English
	</a>
	<a asp-controller="Language" asp-action="SetLanguage" asp-route-culture="pt-BR" asp-route-returnUrl="@Context.Request.Path">
		Português
	</a>

	<div class="login-header">
		<img src="https://www.orbitz.com/_dms/header/logo.svg" alt="Logo">
	</div>

	<form method="post" asp-controller="Account" asp-action="Login">
		<div class="mb-3">
			<label for="email" class="form-label">Email</label>
			<input type="email" name="email" class="form-control" placeholder="Email" required>
		</div>
		<div class="mb-2">
			<label for="password" class="form-label">Password</label>
			<input type="password" name="password" class="form-control" placeholder="Password" required>
		</div>
		<br />
		<div class="forgot-link">
			<a asp-controller="Account" asp-action="ForgotPassword">
				Forgot password?
			</a>
		</div>
		<div class="d-grid mt-3">
			<button type="submit" class="btn btn-primary">Sign In</button>
		</div>
	</form>

	<div class="divider">
		OR
	</div>

	<div class="text-center mt-4">
		<span>Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-primary">Create one</a></span>
	</div>
</div>