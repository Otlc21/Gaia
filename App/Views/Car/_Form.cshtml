@model CarViewModel;

<!-- Basic Info -->
<div class="card shadow-none" id="basic_info">
	<div class="card-header">
		<div class="d-flex align-items-center justify-content-between">
			<h6 class="fs-18">@Localizer["Basic Info"]</h6>
		</div>
	</div>
	<div class="card-body pb-1">
		<div class="row">
			<div class="col-md-12">
				<div class="mb-3">
					<label class="form-label">@Localizer["Car Name"]</label>
					<input asp-for="Name" type="text" class="form-control">
				</div>
			</div>
			<div class="col-xl-4 col-md-6">
				<div class="mb-3">
					<label class="form-label">@Localizer["Price"]</label>
					<input asp-for="Price" type="text" class="form-control">
				</div>
			</div>
			<div class="col-lg-4 col-md-6">
				<div class="mb-3">
					<label class="form-label">@Localizer["Rating"]</label>
					<select asp-for="Rating" class="select">
						<option value="0">Select</option>
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						<option value="5">5</option>
					</select>
				</div>
			</div>
			<div class="col-xl-4 col-md-6">
				<div class="mb-3">
					<label class="form-label">@Localizer["Vehicle Type"]</label>
					<select asp-for="Type" class="select">
						<option value="">@Localizer["Select"]</option>
						<option value="Sedan">@Localizer["Sedan"]</option>
						<option value="Sports">@Localizer["Sports"]</option>
						<option value="SUV">@Localizer["SUV"]</option>
					</select>
				</div>
			</div>
			<div class="col-lg-4 col-md-6">
				<div class="mb-3">
					<label class="form-label">@Localizer["Valid From"]</label>
					<div class="input-icon-end position-relative">
						<input type="text" class="form-control datetimepicker" placeholder="dd/mm/yyyy" value="02-05-2024">
						<span class="input-icon-addon">
							<i class="isax isax-calendar"></i>
						</span>
					</div>
				</div>
			</div>
			<div class="col-lg-4 col-md-6">
				<div class="mb-3">
					<label class="form-label">@Localizer["Valid Until"]</label>
					<div class="input-icon-end position-relative">
						<input type="text" class="form-control datetimepicker" placeholder="dd/mm/yyyy" value="02-05-2024">
						<span class="input-icon-addon">
							<i class="isax isax-calendar"></i>
						</span>
					</div>
				</div>
			</div>
			<div class="col-lg-4 col-md-6">
				<div class="mb-3">
					<label class="form-label">@Localizer["Available Spots"]</label>
					<input asp-for="AvailableSpots" type="number" min="0" max="8" class="form-control">
				</div>
			</div>
			<div class="col-lg-4 col-md-6">
				<div class="mb-3">
					<label class="form-label">@Localizer["Active"]</label>
					<input asp-for="Active" type="checkbox" class="form-control" checked>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- /Basic Info -->
<!-- Specifications -->
<div class="card shadow-none" id="specifications">
	<div class="card-header">
		<div class="d-flex align-items-center justify-content-between">
			<h6 class="fs-18">@Localizer["Specifications"]</h6>
		</div>
	</div>
	<div class="card-body pb-1">
		<div class="row">
			<div class="col-lg-4 col-md-6">
				<div class="mb-3">
					<label class="form-label">@Localizer["Transmission"]</label>
					<select asp-for="Transmission" class="select">
						<option value="">@Localizer["Select"]</option>
						<option value="Auto">@Localizer["Auto"]</option>
						<option value="Manual">@Localizer["Manual"]</option>
					</select>
				</div>
			</div>
			<div class="col-lg-4 col-md-6">
				<div class="mb-3">
					<label class="form-label">@Localizer["Mileage"]</label>
					<input asp-for="Mileage" type="text" class="form-control">
				</div>
			</div>
			<div class="col-lg-4 col-md-6">
				<div class="mb-3">
					<label class="form-label">@Localizer["Year"]</label>
					<input asp-for="Year" type="number" min="1900" max="2100" class="form-control">
				</div>
			</div>
			<div class="col-lg-4 col-md-6">
				<div class="mb-3">
					<label class="form-label">@Localizer["Fuel Type"]</label>
					<select asp-for="Fuel" class="select">
						<option value="">@Localizer["Select"]</option>
						<option value="Petrol">@Localizer["Petrol"]</option>
						<option value="Diesel">@Localizer["Diesel"]</option>
						<option value="Hybrid">@Localizer["Hybrid"]</option>
					</select>
				</div>
			</div>

		</div>
	</div>
</div>
<!-- /Specifications -->
