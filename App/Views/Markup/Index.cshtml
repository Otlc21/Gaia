@{
	ViewData["Title"] = "Markup";
}

@model MarkupViewModel;

<!-- Breadcrumb -->
<div class="breadcrumb-bar breadcrumb-bg-04 text-center">
	<div class="container">
		<div class="row">
			<div class="col-md-12 col-12">
				<h2 class="breadcrumb-title mb-2">@Localizer["Edit Markup"]</h2>
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb justify-content-center mb-0">
						<li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="isax isax-home5"></i></a></li>
						<li class="breadcrumb-item active" aria-current="page">@Localizer["Edit Markup"]</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>
<!-- /Breadcrumb -->
<!-- Page Wrapper -->
<div class="content">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<form method="post" asp-controller="Markup" asp-action="Index">
					<div class="card shadow-none" id="basic_info">
						<div class="card-header">
							<div class="d-flex align-items-center justify-content-between">
								<h6 class="fs-18">@Localizer["Edit Markup"]</h6>
							</div>
						</div>
						<div class="card-body pb-1">
							<div class="row">
								<div class="col-md-12">
									<div class="mb-3">
										<label class="form-label">
											@Localizer["Car"]
										</label>
										<input asp-for="Car" type="text" class="form-control">
									</div>
								</div>
								<div class="col-md-12">
									<div class="mb-3">
										<label class="form-label">@Localizer["Flight"]</label>
										<input asp-for="Flight" type="text" class="form-control">
									</div>
								</div>
								<div class="col-md-12">
									<div class="mb-3">
										<label class="form-label">
											@Localizer["Hotel"]
										</label>
										<input asp-for="Hotel" type="text" class="form-control">
									</div>
								</div>
							</div>
						</div>
					</div>

					<div class="d-flex align-items-center justify-content-center">
						<a href="@Url.Action("Index", "Markup")" class="btn btn-light me-2">@Localizer["Reset"]</a>
						<button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<!-- /Page Wrapper -->
