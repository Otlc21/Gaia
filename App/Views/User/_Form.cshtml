@model UserViewModel;

<div class="card shadow-none" id="basic_info">
    <div class="card-header">
        <div class="d-flex align-items-center justify-content-between">
            <h6 class="fs-18">Basic Info</h6>
        </div>
    </div>
    <div class="card-body pb-1">
        <div class="row">
            <div class="col-md-12">
                <div class="mb-3">
                    <label class="form-label">
                        Name
                    </label>
                    <input asp-for="Name" type="text" class="form-control" value="5">
                </div>
            </div>
            <div class="col-md-12">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" type="text" class="form-control" value="10">
                </div>
            </div>
            <div class="col-md-12">
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input asp-for="Password" type="text" class="form-control" value="10">
                </div>
            </div>
            <div class="col-md-12">
                <div class="mb-3">
                    <label class="form-label">Profile</label>
                    <select asp-for="Profile" class="form-control">
                        <option value="ADM" selected>ADM</option>
                        <option value="User">User</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>
