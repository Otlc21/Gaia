@model UserViewModel;

<div class="card shadow-none" id="basic_info">
    <div class="card-header">
        <div class="d-flex align-items-center justify-content-between">
            <h6 class="fs-18">@Localizer["Basic Info"]</h6>
        </div>
    </div>
    <div class="card-body pb-1">
        <div class="row">
            <div class="col-md-12">
                <div class="mb-3">
                    <label class="form-label">
                        @Localizer["Name"]
                    </label>
                    <input asp-for="Name" type="text" class="form-control">
                </div>
            </div>
            <div class="col-md-12">
                <div class="mb-3">
                    <label class="form-label">@Localizer["Email"]</label>
                    <input asp-for="Email" type="text" class="form-control">
                </div>
            </div>
            @* <div class="col-md-12">
                <div class="mb-3">
                    <label class="form-label">@Localizer["Password"]</label>
                    <input asp-for="Password" type="password" class="form-control">
                </div>
            </div> *@
            <div class="col-md-12">
                <div class="mb-3">
                    <label class="form-label">@Localizer["Profile"]</label>
                    <select asp-for="Profile" class="form-control">
                        <option value="ADM" selected>ADM</option>
                        <option value="User">@Localizer["User"]</option>
                    </select>
                </div>
            </div>
            <div class="col-md-12">
                <div class="mb-3">
                    <label class="form-label">@Localizer["Active"]</label>
                    <input asp-for="Active" class="form-check-input mt-0" type="checkbox">
                </div>
            </div>
        </div>
    </div>
</div>
