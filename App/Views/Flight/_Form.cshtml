@model FlightViewModel;

<div class="card shadow-none" id="basic_info">
    <div class="card-header">
        <div class="d-flex align-items-center justify-content-between">
            <h6 class="fs-18">@Localizer["Basic Info"]</h6>
        </div>
    </div>
    <div class="card-body pb-1">
        <div class="row">
            <div class="col-md-12">
                <div class="mb-3">
                    <label class="form-label">@Localizer["Airline Name"]</label>
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">@Localizer["Flight Name"]</label>
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">@Localizer["Flight Number"]</label>
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">@Localizer["Type"]</label>
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">@Localizer["Price"]</label>
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">@Localizer["Available Spots"]</label>
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="mb-3">
                    <label class="form-label">@Localizer["Active"]</label>
                    <input asp-for="Active" type="checkbox" class="form-control" checked>
                </div>
            </div>
        </div>
    </div>
</div>
