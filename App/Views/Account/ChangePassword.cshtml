@{
    ViewData["Title"] = "Change Password";
    Layout = "_LayoutAccount";
}

@model ChangePasswordViewModel;

<div class="card-header">
    <div class="text-center">
        <h5 class="mb-1">@Localizer["Change Password"]</h5>
    </div>
</div>
<div class="card-body">
    <form href="@Url.Action("Login", "Account")">
        <input hidden asp-for="Id">
        <div class="mb-3">
            <label class="form-label">@Localizer["Password"]</label>
            <div class="input-icon">
                <span class="input-icon-addon">
                    <i class="isax isax-lock"></i>
                </span>
                <input asp-for="Password" type="password" class="form-control form-control-lg pass-input" placeholder="@Localizer["Enter Password"]">
                <span class="input-icon-addon toggle-password">
                    <i class="isax isax-eye-slash"></i>
                </span>
            </div>
        </div>
        <div class="mb-4">
            <label class="form-label">@Localizer["Confirm Password"]</label>
            <div class="input-icon">
                <span class="input-icon-addon">
                    <i class="isax isax-lock"></i>
                </span>
                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg pass-input" placeholder="@Localizer["Enter Password"]">
                <span class="input-icon-addon toggle-password">
                    <i class="isax isax-eye-slash"></i>
                </span>
            </div>
        </div>
        <div class="mb-0">
            <button type="submit" class="btn btn-xl btn-primary d-flex align-items-center justify-content-center w-100">@Localizer["Change Password"]<i class="isax isax-arrow-right-3 ms-2"></i></button>
        </div>
    </form>
</div>