@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_LayoutAccount";
}

@model ForgotPasswordViewModel;

<div class="card-header">
    <div class="text-center">
        <h5 class="mb-1">@Localizer["Forgot Password"]</h5>
    </div>
</div>
<div class="card-body">
    <form method="post" asp-controller="Account" asp-action="ForgotPassword">
        <div class="mb-3">
            <label class="form-label">@Localizer["Email"]</label>
            <div class="input-icon">
                <span class="input-icon-addon">
                    <i class="isax isax-message"></i>
                </span>
                <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="@Localizer["Enter Email"]">
            </div>
        </div>
        <div class="mb-4">
            <p class="text-success"><i class="isax isax-tick-circle5 me-1"></i>@Localizer["Reset Password Sent to"] “adrian@example.com”</p>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-xl btn-primary d-flex align-items-center justify-content-center w-100">@Localizer["Reset Password"]<i class="isax isax-arrow-right-3 ms-2"></i></button>
        </div>
        <div class="d-flex justify-content-center">
            <p class="fs-14">@Localizer["Remember Password?"] <a href="@Url.Action("Login", "Account")" class="link-primary fw-medium">@Localizer["Sign In"]</a></p>
        </div>
    </form>
</div>