@{
	ViewData["Title"] = "Sign In";
	Layout = "_LayoutAccount";
}

@model LoginViewModel;

<div class="card-header">
	<div class="text-center">
		<h5 class="mb-1">@Localizer["Sign In"]</h5>
	</div>
</div>
<div class="card-body">
	<form method="post" asp-controller="Account" asp-action="Login">
		<div class="mb-3">
			<label class="form-label">@Localizer["Email"]</label>
			<div class="input-icon">
				<span class="input-icon-addon">
					<i class="isax isax-message"></i>
				</span>
				<input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="@Localizer["Enter Email"]">
			</div>
		</div>
		<div class="mb-3">
			<label class="form-label">Password</label>
			<div class="input-icon">
				<span class="input-icon-addon">
					<i class="isax isax-lock"></i>
				</span>
				<input asp-for="Password" type="password" class="form-control form-control-lg pass-input" placeholder="@Localizer["Enter Password"]">
				<span class="input-icon-addon toggle-password">
					<i class="isax isax-eye-slash"></i>
				</span>
			</div>
		</div>
		<div class="mt-3 mb-3">
			<div class="d-flex align-items-center justify-content-between flex-wrap row-gap-2">
				<div class="form-check d-flex align-items-center mb-2">
					<input asp-for="RememberMe" class="form-check-input mt-0" type="checkbox">
					<label class="form-check-label ms-2 text-gray-9 fs-14" for="RememberMe">
								@Localizer["Remember Me"]
					</label>
				</div>
				<a href="@Url.Action("ForgotPassword", "Account")" class="link-primary fw-medium fs-14 mb-2">@Localizer["Forgot Password?"]</a>
			</div>
		</div>
		<div class="mb-3">
			<button type="submit" class="btn btn-xl btn-primary d-flex align-items-center justify-content-center w-100">@Localizer["Login"]<i class="isax isax-arrow-right-3 ms-2"></i></button>
		</div>
		<div class="d-flex justify-content-center">
			<p class="fs-14">@Localizer["Don't you have an account?"] <a href="@Url.Action("Register", "Account")" class="link-primary fw-medium">@Localizer["Sign up"]</a></p>
		</div>
	</form>
</div>