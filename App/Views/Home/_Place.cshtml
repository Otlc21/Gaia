@model HomeViewModel;

<div class="container">
	<div class="row justify-content-center">
		<div class="col-xl-6 col-lg-10 text-center wow fadeInUp" data-wow-delay="0.2s">
			<div class="section-header mb-4 text-center">
				<h2 class="mb-2">@Localizer["Our Trending Places"]</h2>
			</div>
		</div>
	</div>
	<div class="place-nav">
		<ul class="nav justify-content-center">
			<li>
				<a href="javascript:void(0);" class="nav-link" data-bs-toggle="tab" data-bs-target="#flight-list">
					@Localizer["Flights"]
				</a>
			</li>
			<li>
				<a href="javascript:void(0);" class="nav-link active" data-bs-toggle="tab" data-bs-target="#Hotels-list">
					@Localizer["Hotels"]
				</a>
			</li>
			<li>
				<a href="javascript:void(0);" class="nav-link" data-bs-toggle="tab" data-bs-target="#Cars-list">
					@Localizer["Cars"]
				</a>
			</li>

		</ul>
	</div>
	<div class="tab-content">

		<!-- Hotels List -->
		<div class="tab-pane fade active show" id="Hotels-list">
			<div class="owl-carousel place-slider nav-center">

				@foreach (var item in Model.TrendingHotel)
				{
					<!-- Place Item-->
					<div class="place-item mb-4">
						<div class="place-img">
							<div class="img-slider image-slide owl-carousel nav-center">
								<div class="slide-images">
									<a href="javascript:void(0);">
										<img src="~/img/hotels/hotel-01.jpg" class="img-fluid" alt="img">
									</a>
								</div>
								<div class="slide-images">
									<a href="javascript:void(0);">
										<img src="~/img/hotels/hotel-02.jpg" class="img-fluid" alt="img">
									</a>
								</div>
								<div class="slide-images">
									<a href="javascript:void(0);">
										<img src="~/img/hotels/hotel-03.jpg" class="img-fluid" alt="img">
									</a>
								</div>
							</div>
							<div class="fav-item">
								<div class="d-flex align-items-center">
									@* <a href="javascript:void(0);" class="fav-icon me-2">
									<i class="isax isax-heart5"></i>
								</a>
								<span class="badge bg-indigo">Cheapest</span> *@
								</div>
								<span class="badge badge-warning badge-xs text-gray-9 fs-13 fw-medium rounded">@item.Rating</span>
							</div>
						</div>
						<div class="place-content">
							@* <div class="d-flex align-items-center mb-1">
								<span class="badge badge-warning badge-xs text-gray-9 fs-13 fw-medium me-2">5.0</span>
								<p class="fs-14">(400 Reviews)</p>
							</div> *@
							<h5 class="mb-1"><a href="javascript:void(0);">@item.Name</a></h5>
							<p class="d-flex align-items-center mb-2"><i class="isax isax-location5 me-2"></i>@item.Location</p>
							@* <div class="border-top pt-2 mb-2">
								<h6 class="d-flex align-items-center">Facillities :<i class="isax isax-wifi ms-2 me-2 text-primary"></i><i class="isax isax-scissor me-2 text-primary"></i><i class="isax isax-profile-2user me-2 text-primary"></i><i class="isax isax-wind-2 me-2 text-primary"></i><a href="javascript:void(0);" class="fs-14 fw-normal text-default d-inline-block">+2</a></h6>
							</div> *@
							<div class="d-flex align-items-center justify-content-between border-top pt-3">
								<h5 class="text-primary">$ @item.Price <span class="fs-14 fw-normal text-default">/ @Localizer["Night"]</span></h5>
								@* <a href="javascript:void(0);" class="d-flex align-items-center">
									<span class="avatar avatar-md me-2">
										<img src="~/img/users/user-01.jpg" class="rounded-circle" alt="img">
									</span>
									<p class="fs-14">Beth Williams</p>
								</a> *@
								<div class="d-flex align-items-center">
									<span class="badge bg-outline-success fs-10 fw-medium p-2 me-2">@item.AvailableSpots @Localizer["Spots Left"]</span>
									@* <a href="javascript:void(0);" class="avatar avatar-sm">
										<img src="~/img/users/user-11.jpg" class="rounded-circle" alt="img">
									</a> *@
								</div>
							</div>
						</div>
					</div>
					<!-- /Place Item-->
				}
			</div>
		</div>
		<!-- /Hotels List -->
		<!-- Flight List -->
		<div class="tab-pane fade" id="flight-list">
			<div class="owl-carousel place-slider nav-center">

				@foreach (var item in Model.TrendingFlight)
				{
					<!-- Flight Item-->
					<div class="place-item mb-4">
						<div class="place-img">
							<a href="javascript:void(0);">
								<img src="~/img/flight/flight-01.jpg" class="img-fluid" alt="img">
							</a>
							<div class="fav-item">
								<div class="d-flex align-items-center">
									@* <a href="javascript:void(0);" class="fav-icon me-2">
									<i class="isax isax-heart5"></i>
								</a>
								<span class="badge bg-indigo">Cheapest</span> *@
								</div>
								<span class="badge badge-warning badge-xs text-gray-9 fs-13 fw-medium rounded">@item.Rating</span>
							</div>
						</div>
						<div class="place-content">
							<div class="flight-loc d-flex align-items-center justify-content-between mb-2">
								<span class="loc-name d-inline-flex align-items-center"><i class="isax isax-airplane rotate-45 me-2"></i>@item.From.Split(' ')[0]</span>
								<span class="arrow-icon"><i class="isax isax-arrow-2"></i></span>
								<span class="loc-name d-inline-flex align-items-center"><i class="isax isax-airplane rotate-135 me-2"></i>@item.To.Split(' ')[0]</span>
							</div>
							<h5 class="text-truncate mb-1"><a href="javascript:void(0);">@item.Name</a></h5>
							<div class="d-flex align-items-center mb-2">
								<span class="avatar avatar-sm me-2">
									<img src="~/img/users/user-08.jpg" class="rounded-circle" alt="icon">
								</span>
								<p class="fs-14 mb-0">@item.Airline</p>
								@* <p class="fs-14 mb-0">1-stop at Frankfurt</p> *@
							</div>
							<div class="date-info p-2 mb-3">
								<p class="d-flex align-items-center"><i class="isax isax-calendar-2 me-2"></i>@item.Departure.ToShortDateString() - @item.Return.ToShortDateString()</p>
							</div>
							<div class="d-flex align-items-center justify-content-between border-top pt-3">
								<h6 class="text-primary"><span class="fs-14 fw-normal text-default">@Localizer["Price"] </span>$ @item.Price</h6>
								<div class="d-flex align-items-center">
									<span class="badge bg-outline-success fs-10 fw-medium p-2 me-2">@item.AvailableSpots @Localizer["Seats Left"]</span>
									@* <a href="javascript:void(0);" class="avatar avatar-sm">
										<img src="~/img/users/user-11.jpg" class="rounded-circle" alt="img">
									</a> *@
								</div>
							</div>
						</div>
					</div>
					<!-- /Flight Item-->
				}
			</div>
		</div>
		<!-- /Flight List -->
		<!-- Cars List -->
		<div class="tab-pane fade" id="Cars-list">
			<div class="owl-carousel place-slider nav-center">

				@foreach (var item in Model.TrendingCar)
				{
					<!-- Car Item-->
					<div class="place-item mb-4 flex-fill">
						<div class="place-img">
							<div class="img-slider image-slide owl-carousel nav-center">
								<div class="slide-images">
									<a href="javascript:void(0);">
										<img src="~/img/cars/car-06.jpg" class="img-fluid" alt="img">
									</a>
								</div>
								<div class="slide-images">
									<a href="javascript:void(0);">
										<img src="~/img/cars/car-07.jpg" class="img-fluid" alt="img">
									</a>
								</div>
								<div class="slide-images">
									<a href="javascript:void(0);">
										<img src="~/img/cars/car-08.jpg" class="img-fluid" alt="img">
									</a>
								</div>
							</div>
							<div class="fav-item">
								<div class="d-flex align-items-center">
									@* <a href="javascript:void(0);" class="fav-icon me-2">
									<i class="isax isax-heart5"></i>
								</a>
								<span class="badge bg-indigo">Cheapest</span> *@
								</div>
								<span class="badge badge-warning badge-xs text-gray-9 fs-13 fw-medium rounded">@item.Rating</span>
							</div>
						</div>
						<div class="place-content">
							<a href="javascript:void(0);" class="avatar avatar-md ms-3 car-avatar-image">
								<img src="~/img/users/user-08.jpg" class="rounded-circle" alt="img">
							</a>
							<div class="d-flex align-items-center justify-content-between mb-1">
								<div class="d-flex flex-wrap align-items-center">
									<span class="badge badge-secondary  fs-10 fw-medium me-1">@item.Type</span>
								</div>
							</div>
							<h5 class="mb-1 text-truncate"><a href="javascript:void(0);">@item.Name	</a></h5>
							<p class="d-flex align-items-center mb-3"><i class="isax isax-location5 me-2"></i>@item.Location</p>
							<div class="mb-3 p-2 border rounded d-flex align-items-center justify-content-between">
								<div class="pe-4 border-end">
									<span class="fs-14 d-flex align-items-center text-dark"><i class="isax isax-gas-station me-1"></i>@Localizer["Fuel"]</span>
									<p class="text-dark fs-14">@item.Fuel</p>
								</div>
								<div class="pe-4 border-end">
									<span class="fs-14 d-flex align-items-center text-dark"><i class="isax isax-kanban me-1"></i>@Localizer["Gear"]</span>
									<p class="text-dark fs-14">@item.Transmission</p>
								</div>
								<div>
									<span class="fs-14 d-flex align-items-center text-dark"><i class="isax isax-routing-2 me-1"></i>@Localizer["Year"]</span>
									<p class="text-dark fs-14">@item.Year</p>
								</div>
							</div>
							<div class="d-flex align-items-center justify-content-between border-top pt-3">
								<div class="d-flex flex-wrap align-items-center me-2">
									<h5 class="text-primary">$ @item.Price <span class="fs-14 text-gray-6 fw-normal">/ @Localizer["day"]</span></h5>
								</div>
								<div class="ms-2 d-flex align-items-center">
									<span class="badge bg-outline-success fs-10 fw-medium p-2 me-2">@item.AvailableSpots @Localizer["Spots Left"]</span>

									@* <div class="d-flex align-items-center flex-wrap">
										<span class="badge badge-warning badge-xs text-gray-9 fs-13 fw-medium me-1">5.0</span>
										<p class="fs-14">(400 Reviews)</p>
									</div> *@
								</div>
							</div>
						</div>
					</div>
					<!-- /Car Item-->
				}
			</div>

		</div>
		<!-- /Cars List -->

	</div>
</div>