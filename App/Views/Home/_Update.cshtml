@model HomeViewModel;

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="update-sec">
				<div class="section-header text-center">
					<h2 class="mb-1">@Localizer["Stay Updated"]</h2>
					<p class="sub-title">@Localizer["Signup for New Offers & Updates from"] Realize Travel </p>
				</div>
				<div class="input-group justify-content-center mx-auto">
					<span class="input-group-text px-1"><i class="isax isax-message-favorite5"></i></span>
					<input type="email" class="form-control" placeholder="@Localizer["Enter Email Address"]">
					<button type="submit" class="btn btn-primary">@Localizer["Subscribe"]</button>
				</div>
			</div>
		</div>
	</div>
</div>