@{
	ViewData["Title"] = "Home Page";
}

<div class="container search-box">
	<ul class="nav nav-pills mb-3" id="searchTabs" role="tablist">
		<li class="nav-item" role="presentation">
			<button class="nav-link active" id="stays-tab" data-bs-toggle="pill" data-bs-target="#stays" type="button" role="tab">@Localizer["Hotel"]</button>
		</li>
		<li class="nav-item" role="presentation">
			<button class="nav-link" id="flights-tab" data-bs-toggle="pill" data-bs-target="#flights" type="button" role="tab">@Localizer["Flight"]</button>
		</li>
		<li class="nav-item" role="presentation">
			<button class="nav-link" id="cars-tab" data-bs-toggle="pill" data-bs-target="#cars" type="button" role="tab">@Localizer["Car"]</button>
		</li>
		<li class="nav-item" role="presentation">
			<button class="nav-link" id="package-tab" data-bs-toggle="pill" data-bs-target="#package" type="button" role="tab">@Localizer["Package"]</button>
		</li>
	</ul>

	<div class="tab-content" id="searchTabContent">
		<div class="tab-pane fade show active" id="stays" role="tabpanel">
			<form>
				<div class="form-container">
					<div class="form-group">
						<label>@Localizer["Destination"]</label>

						<div class="input-icon">
							<i class="fa fa-map-marker-alt"></i>
							<input type="text" class="form-control" placeholder="@Localizer["Destination"]">
						</div>
					</div>
					<div class="form-group">
						<label>Check-in</label>
						<div class="input-icon">
							<i class="fa fa-calendar-alt"></i>
							<input type="text" class="form-control" placeholder="Check-in">
						</div>
					</div>

					<div class="form-group">
						<label>Check-out</label>
						<div class="input-icon">
							<i class="fa fa-calendar-alt"></i>
							<input type="text" class="form-control" placeholder="Check-out">
						</div>
					</div>

					<div class="form-group">
						<label>@Localizer["Travelers"]</label>
						<div class="input-icon">
							<i class="fa fa-user"></i>
							<input type="text" class="form-control" placeholder="@Localizer["Travelers"]" min="1" max="12">
						</div>
					</div>

					<div class="form-group">
						<label>@Localizer["TravelersChildren"]</label>
						<div class="input-icon">
							<i class="fa fa-user"></i>
