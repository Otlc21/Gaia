					</div>
					<div class="form-group">
						<label></label>
						<button type="button" class="btn btn-primary">@Localizer["Search"]</button>
					</div>

				</div>
			</form>
		</div>

		<div class="tab-pane fade" id="flights" role="tabpanel">
			<form>
				<div class="form-container">
					<div class="form-group">
