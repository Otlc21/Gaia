@{
	ViewData["Title"] = "Register";
	Layout = "_LayoutLogin";
}

@model RegisterViewModel


<div class="login-container">

	<a asp-controller="Home" asp-action="Index" class="back-arrow">
		<i class="fa fa-arrow-left"></i>
	</a>

	<div class="login-header">
		<img src="~/image/realize-full-blue-one-line.png" alt="Logo">
	</div>

	<form method="post" asp-controller="Account" asp-action="Register">
		<div class="mb-3">
			<label for="username" class="form-label">Username</label>
			<input type="text" name="username" class="form-control" placeholder="Username" required>
			<span asp-validation-for="Username" class="text-danger"></span>
		</div>
		<div class="mb-2">
			<label for="password" class="form-label">Password</label>
			<input type="password" name="password" class="form-control" placeholder="Password" required>
			<span asp-validation-for="Password" class="text-danger"></span>

		</div>
		<div class="mb-2">
			<label for="ConfirmPassword" class="form-label">Confirm Password</label>
			<input type="password" name="password" class="form-control" placeholder="Confirm Password" required>
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>

		</div>
		<br />
		<div class="d-grid mt-3">
			<button type="submit" class="btn btn-primary">Sign Up</button>
		</div>
	</form>

	<div class="divider">
		OR
	</div>

	<div class="text-center mt-4 forgot-link">
		<span>Already have an account? <a asp-controller="Account" asp-action="Login">Sign in</a></span>
	</div>
</div>