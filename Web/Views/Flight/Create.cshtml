@model Web.Models.FlightViewModel
@inject IStringLocalizer<SharedResources> Localizer

<div class="container mt-4">
    <h2 class="mb-4" style="color: #383838; font-family: 'Roboto', sans-serif;">
        @ViewData["Title"]
    </h2>
    <form method="post">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="AirportOrigemId" class="form-label">@Localizer["AirportOrigem"]</label>
                <select asp-for="AirportOrigemId" asp-items="Model.Airports" class="form-select" style="font-family: 'Roboto', sans-serif; color: #383838;">
                </select>
                <span asp-validation-for="AirportOrigemId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="AirportDestinoId" class="form-label">@Localizer["AirportDestino"]</label>
                <select asp-for="AirportDestinoId" asp-items="Model.Airports" class="form-select" style="font-family: 'Roboto', sans-serif; color: #383838;">
                </select>
                <span asp-validation-for="AirportDestinoId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="AirlineId" class="form-label">@Localizer["Airline"]</label>
                <select asp-for="AirlineId" asp-items="Model.Airlines" class="form-select" style="font-family: 'Roboto', sans-serif; color: #383838;">
                </select>
                <span asp-validation-for="AirlineId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Departure" class="form-label">@Localizer["Departure"]</label>
                <input asp-for="Departure" type="datetime-local" class="form-control" style="font-family: 'Roboto', sans-serif; color: #383838;" />
                <span asp-validation-for="Departure" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Arrival" class="form-label">@Localizer["Arrival"]</label>
                <input asp-for="Arrival" type="datetime-local" class="form-control" style="font-family: 'Roboto', sans-serif; color: #383838;" />
                <span asp-validation-for="Arrival" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Classe" class="form-label">@Localizer["Class"]</label>
                <input asp-for="Classe" class="form-control" placeholder="@Localizer["EnterClass"]" style="font-family: 'Roboto', sans-serif; color: #383838;" />
                <span asp-validation-for="Classe" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Amount" class="form-label">@Localizer["Amount"]</label>
                <input asp-for="Amount" type="number" class="form-control" placeholder="@Localizer["EnterAmount"]" style="font-family: 'Roboto', sans-serif; color: #383838;" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input asp-for="Active" class="form-check-input" />
                    <label asp-for="Active" class="form-check-label">@Localizer["IsActive"]</label>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-between mt-4">
            <a href="@Url.Action("Index", "Flight")" class="btn btn-secondary">
                @Localizer["Back"]
            </a>
            <button type="submit" class="btn btn-primary">
                @Localizer["Save"]
            </button>
        </div>
    </form>
</div>