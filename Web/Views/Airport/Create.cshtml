@model Web.Models.AirportViewModel
@inject IStringLocalizer<SharedResources> Localizer

<div class="container mt-4">
    <h2 class="mb-4" style="color: #383838; font-family: 'Roboto', sans-serif;">
        @ViewData["Title"]
    </h2>
    <form method="post">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Code" class="form-label">@Localizer["Code"]</label>
                <input asp-for="Code" class="form-control" placeholder="@Localizer["EnterCode"]" style="font-family: 'Roboto', sans-serif; color: #383838;" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Description" class="form-label">@Localizer["Description"]</label>
                <input asp-for="Description" class="form-control" placeholder="@Localizer["EnterDescription"]" style="font-family: 'Roboto', sans-serif; color: #383838;" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="LocationId" class="form-label">@Localizer["Location"]</label>
                <select asp-for="LocationId" asp-items="Model.Locations" class="form-select" style="font-family: 'Roboto', sans-serif; color: #383838;">
                </select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Creation" class="form-label">@Localizer["CreationDate"]</label>
                <input asp-for="Creation" type="date" class="form-control" style="font-family: 'Roboto', sans-serif; color: #383838;" />
                <span asp-validation-for="Creation" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input asp-for="Active" class="form-check-input" />
                    <label asp-for="Active" class="form-check-label">@Localizer["IsActive"]</label>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-between mt-4">
            <a href="@Url.Action("Index", "Airport")" class="btn btn-secondary">
                @Localizer["Back"]
            </a>
            <button type="submit" class="btn btn-primary">
                @Localizer["Save"]
            </button>
        </div>
    </form>
</div>