@model Web.Models.AirlineViewModel
@inject IStringLocalizer<SharedResources> Localizer

<div class="container mt-4">
    <h2 class="mb-4" style="color: #383838; font-family: 'Roboto', sans-serif;">
        @ViewData["Title"]
    </h2>
    <form method="post">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label">@Localizer["Name"]</label>
                <input asp-for="Name" class="form-control" placeholder="@Localizer["EnterName"]" style="font-family: 'Roboto', sans-serif; color: #383838;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Country" class="form-label">@Localizer["Country"]</label>
                <input asp-for="Country" class="form-control" placeholder="@Localizer["EnterCountry"]" style="font-family: 'Roboto', sans-serif; color: #383838;" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Creation" class="form-label">@Localizer["CreationDate"]</label>
                <input asp-for="Creation" type="date" class="form-control" style="font-family: 'Roboto', sans-serif; color: #383838;" />
                <span asp-validation-for="Creation" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input asp-for="Active" class="form-check-input" />
                    <label asp-for="Active" class="form-check-label">@Localizer["IsActive"]</label>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-between mt-4">
            <a href="@Url.Action("Index", "Airline")" class="btn btn-secondary">
                @Localizer["Back"]
            </a>
            <button type="submit" class="btn btn-primary">
                @Localizer["Save"]
            </button>
        </div>
    </form>
</div>